@model IEnumerable<Restaurant_project.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-default" title="Edit"><i class="glyphicon glyphicon-plus"></i> Add New Item</a>

</p>
<table class="table table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Food.Foodname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumArtUrl)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Food.Foodname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumArtUrl)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.AlbumId })" class="btn btn-default" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>

                <a href="@Url.Action("Details", new { id= item.AlbumId })" class="btn btn-default" title="Info"><i class="glyphicon glyphicon-info-sign"></i></a>

                <a href="@Url.Action("Delete", new { id= item.AlbumId })" class="btn btn-default" title="Delete"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    }

</table>
