<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--Reference of images come from the Google images-->
                <a href="@Url.Action("Index","Home")" class="navbar-brand"><img id="brand" alt="Brand" src="~/Assets/images/logo.png" /> MVC Chinese Restaurant</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><span class="glyphicon glyphicon-home">@Html.ActionLink("Home", "Index", "Home")</span></li>
                    <li><span class="glyphicon glyphicon-th-large">@Html.ActionLink("Menu", "Index", "Menu")</span></li>
                    <li><span class="glyphicon glyphicon-info-sign">@Html.ActionLink("About", "About", "Home")</span></li>
                    <li><span class="glyphicon glyphicon-phone">@Html.ActionLink("Contact", "Contact", "Home")</span></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
